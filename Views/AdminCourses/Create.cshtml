@model CrudDemo.Models.Course

@{
    ViewData["Title"] = "Créer un Nouveau Cours";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle"></i> @ViewData["Title"]
                    </h5>
                </div>

                <div class="card-body">

                    <form asp-action="Create" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Titre du cours -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Ex: Formation Cybersécurité Niveau 1" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" rows="4" class="form-control" placeholder="Décrivez le contenu du cours..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Prix -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold">
                                    <i class="fas fa-euro-sign"></i> Prix (€)
                                </label>
                                <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" value="0" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                                <small class="text-muted">0 = gratuit</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Type</label>
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="IsFree" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsFree" class="form-check-label">
                                        Cours gratuit
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-check"></i> Enregistrer
                            </button>

                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
