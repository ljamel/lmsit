@model IEnumerable<CrudDemo.Models.Course>

@{
    ViewData["Title"] = "Gestion des Cours";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau Cours
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Modules</th>
                    <th>Créé par</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td><strong>@course.Title</strong></td>
                        <td>@(string.IsNullOrEmpty(course.Description) ? "" : (course.Description.Length > 50 ? course.Description.Substring(0, 50) + "..." : course.Description))</td>
                        <td><span class="badge bg-info">@course.Modules.Count</span></td>
                        <td>@course.CreatedBy</td>
                        <td>@course.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-secondary">Détails</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Aucun cours créé. <a asp-action="Create">Créer un nouveau cours</a>
        </div>
    }
</div>
