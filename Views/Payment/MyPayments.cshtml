@model List<CrudDemo.Models.Payment>

@{
    ViewData["Title"] = "Mes paiements";
}

<div class="container mt-4">
    <div class="card shadow-lg animated-card">
        <div class="card-header gradient-header-payment">
            <h2 class="mb-0 text-white">
                <i class="fas fa-receipt"></i> Historique des paiements
            </h2>
        </div>
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox text-muted" style="font-size: 4rem;"></i>
                    <p class="lead text-muted mt-3">Aucun paiement enregistré</p>
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-primary animated-btn">
                        <i class="fas fa-search"></i> Découvrir les cours
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Cours</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr class="animated-row">
                                    <td>@payment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (payment.Course != null)
                                        {
                                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@payment.Course.Id">
                                                @payment.Course.Title
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <strong>@payment.Amount.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</strong>
                                    </td>
                                    <td>
                                        @if (payment.Status == "succeeded")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Payé
                                            </span>
                                        }
                                        else if (payment.Status == "pending")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> En attente
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Échoué
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (payment.Course != null && payment.Status == "succeeded")
                                        {
                                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@payment.Course.Id" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-play"></i> Accéder
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .gradient-header-payment {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        padding: 1.5rem;
    }
    
    .animated-card {
        animation: slideUp 0.5s ease-out;
    }
    
    .animated-row {
        transition: background-color 0.3s ease;
    }
    
    .animated-row:hover {
        background-color: rgba(0,123,255,0.05);
    }
    
    .animated-btn {
        transition: all 0.3s ease;
    }
    
    .animated-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
