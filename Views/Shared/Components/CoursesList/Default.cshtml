@using NuGet.Versioning
@model IEnumerable<CrudDemo.Models.Course>

<div class="container mt-4 menu-dashboard">
    <h1>Mes Cours</h1>
  
  

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>Aucun cours disponible pour le moment.</p>
        </div>
    }
    else
    {


        <div class="row">
            @foreach (var course in Model)
            {
             



                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">
                                @(course.Description.Length > 100 
                                    ? course.Description.Substring(0, 100) + "..." 
                                    : course.Description)
                            </p>
                            <small class="text-muted">
                                <i class="fas fa-book"></i> @(course.Modules?.Count ?? 0) module(s)
                            </small>
                        </div>
                        <div class="card-footer bg-white border-top">
                            <a class="btn btn-primary btn-sm w-100" 
                               asp-controller="Courses"
                               asp-action="Details" 
                               asp-route-id="@course.Id">
                                <i class="fas fa-eye"></i> Voir DÃ©tails  ( @string.Join(", ", course.Modules.Select(m => m.Title)) )
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
